# Maintainer: Evan Purkhiser <evanpurkhiser@gmail.com>

_gitname=systemd-user-sessions

pkgname=systemd-user-sessions-git
pkgver=12.f38cb8e
pkgrel=1
pkgdesc="Units required for a basic systemd --user session"
arch=(any)
license=('GPL')
url="https://github.com/EvanPurkhiser/${_gitname}"
depends=(systemd)
makedepends=(git)
conflicts=(user-session-units systemd-user-session-units-git)
source=("git://github.com/EvanPurkhiser/${_gitname}")
md5sums=('SKIP')

pkgver() {
	cd "${srcdir}/${_gitname}"
	echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
	cd "${srcdir}/${_gitname}"

	install -dm 755 "${pkgdir}/usr/lib"
	cp -a "systemd" "${pkgdir}/usr/lib"

	install -Dm 644 "LICENSE" "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
