pkgname=ventrilo-status
pkgver=3.0.3
pkgrel=1
url="http://www.ventrilo.com/"
pkgdesc="A tool used for submitting status information requests to ventrilo servers"
license=('custom:Ventrilo Public Server Software Licence')
arch=('i686' 'x86_64')
depends=()
makedepends=()

source=('ventrilo_srv-3.0.3-Linux-i386.tar.gz')
md5sums=('0f6af5a3dc1935e83cfb4cb37e210007')

package() {

  cd "$srcdir/ventsrv"

  install -D -m644 "LICENSE" "$pkgdir/usr/share/licence/ventrilo_status/LICENSE"
  install -D -m755 "ventrilo_status" "$pkgdir/usr/bin/ventrilo_status"

}
